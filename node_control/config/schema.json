{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Product",
  "description": "A product from Acme's catalog",
  "type": "object",
  "properties": {
    "ansible": {
      "type": "object",
      "properties": {
        "user": {
          "type": "string"
        },
        "private_key_file": {
          "type": "string"
        }
      },
      "required": [
        "user",
        "private_key_file"
      ]
    },
    "hosts": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "required": [
    "ansible",
    "hosts"
  ]
}